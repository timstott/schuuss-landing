@import "variables";

#landing {
  min-height: 500px;
  background-image: url("<%= image_path('landing.jpg') %>");
  background-size: cover;
  background-position: center;

  padding-right: 30px;
  padding-left: 30px;

  #hero {
    margin-top: -20px;

    h1, h2 {
      color: #FFF;
      text-align: center;
      margin-bottom: 0px;
    }

    h1 {
      font-size: 50px;
      font-weight: 700;
      text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
      margin-top: 0px;
    }

    h2 {
      font-weight: 500;
      text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5), -2px 0px 2px rgba(0, 0, 0, 0.5);
      max-width: 500px;
      margin-top: 50px;
      // Align horizontally center
      margin-left: auto;
      margin-right: auto;
    }

  }
}

.container-fluid {
  border-bottom: 1px solid $bright-blue;
  box-sizing: content-box;
}

#schuuss {
  form {
    margin-top: 50px;
    max-width: 400px;

    // Align horizontally center
    margin-left: auto;
    margin-right: auto;
  }
  .input-group {

    input, button {
      color: #7D7D7D;
      text-align: center;

      outline: 0;
      background: rgba(255, 255, 255, 0.75);
      box-shadow: none;
      // Remove inner shadow on Mobile Safari
      -webkit-appearance: none;

      transition: color .1s ease-in-out;
      transition: border-color .1s ease-in-out;
    }

    input {
      font-family: Lobster;
      font-size: 20px;
      padding: 30px 15px;

      text-transform: lowercase;

      &:focus {
        border-color: $bright-blue;
      }
    }
    button {
      font-size: 20px;
      padding: 16px 20px;

      &:hover, &:focus {
        color: $bright-blue;
        border-color: $bright-blue;
      }
    }
  }
}

#pick {
  height: initial;
  @media (min-width: $md-min) {
    height: 100%;
  }
}
#screening {
  background: #F0F6FF;
  img {

    margin: auto;
  }
}

section.feature {


  // Additional side padding on mobile
  padding-left: 25px;
  padding-right: 25px;

  padding-top: 25px;
  padding-bottom: 25px;


  h2 {
    max-width: 500px;
    text-align: center;

    margin: 10px auto;

    @media (min-width: $md-min) {
      text-align: left;
      max-width: none;
    }

  }

  p {
    max-width: 700px;
    font-size: 17px;
    text-align: center;

    margin: 20px auto;

    @media (min-width: $md-min) {
      text-align: left;
      max-width: none;
    }
  }

  h3 {
    text-align: center;

  }

}

#guarantees {

  img {
    max-height: 160px;
    margin: auto;
  }
}
